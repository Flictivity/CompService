@inherits LayoutComponentBase

<PageTitle>CompService.Client</PageTitle>
<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider/>


<MudLayout>
    <MudAppBar>
    </MudAppBar>
    <MudPaper Style="overflow:hidden; position:relative;">
        <MudDrawer ClipMode="DrawerClipMode.Always" Elevation="1" Variant="DrawerVariant.Mini">
            <MudNavMenu>
                <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home" Href="/index"/>
            </MudNavMenu>
        </MudDrawer>
    </MudPaper>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}